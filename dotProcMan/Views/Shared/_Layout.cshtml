<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotProcMan</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/npm/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/libs.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-3">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">dotProcMan</a>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <hr />
    <div class="container">
        <footer>
            <p>&copy; @DateTime.Today.Year - dotProcMan</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/npm/jquery/dist/jquery.js"></script>
        <script src="~/npm/popper.js/dist/umd/popper.js"></script>
        <script src="~/npm/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/main.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/libs.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
